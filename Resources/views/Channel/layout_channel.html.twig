{% extends "ChateaClientBundle::mainLayout.html.twig" %}


{% block chatea_body %}
<div class="main-container-inner">
	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-8" id="body_container_center">
			{% block body_container_center %}
	 		{% endblock %}
	 	</div>
	 	<div class="col-xs-12 col-sm-12 col-md-4" id="body_container_right">
			{% block body_container_right %}
			{% endblock %}
		</div>		 		
	</div>
</div>
{% endblock chatea_body %}

{% block chatea_js %}
{# Begin Code to button go to chat #}
	{% javascripts 
		'@ApiSocialBundle/Resources/public/js/chat-bridge.js'
		%}
    	<script src="{{ asset_url }}"></script>
	{% endjavascripts %}                    
                    
	<script>
        newChatButton("{{ channel.ircChannel }}", "{% if not chat_url %}{{ path('ant_chat_chat_show', {channel: channel.ircChannel } )}}{% else %}{{chat_url}}?channel={{ channel.ircChannel  | url_encode}}{% if app.user is not null %}&nick={{  app.user.username}}{% endif %}{% endif %}");
    </script>
{# Finish Code to button go to chat #}
{% endblock %}