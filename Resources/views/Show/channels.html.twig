{% extends "ChateaClientBundle::mainLayout.html.twig" %}

{% block head_meta_description %}{% include 'ApiSocialBundle:Show:meta/description.html.twig' with {'user': user} %}{% endblock %}
{% block head_meta_keywords %}{% include 'ApiSocialBundle:Show:meta/keywords.html.twig' with {'user': user} %}{% endblock %}
{% block head_title %}{% include 'ApiSocialBundle:Show:meta/title.html.twig' with {'user': user} %}{% endblock %}


{% block head_css %}
    {{ parent() }}
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet" />
    {% stylesheets 
            "@ApiSocialBundle/Resources/public/css/custom.css" 
        %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
    {% endstylesheets %}
{% endblock head_css %}

{% block chatea_body %}
    <div class="container">
        <div class="row">
            {% if type == 'owner' %}
                {{ include ('ApiSocialBundle:User:_cover_channels.html.twig' , {'text' : 'user.owner_of_channels', 'icon' :'fa-trophy', 'list': 'owner', 'hide_subtitle' : true, 'has_channels': false, 'photo_with_link' : true} ) }}
            {% elseif type == 'moderator' %}
                {{ include ('ApiSocialBundle:User:_cover_channels.html.twig' , {'text' : 'user.moderator_of_channels' , 'icon' :'fa-gavel', 'list': 'moderator', 'has_channels': false, 'hide_subtitle' : true , 'photo_with_link' : true} ) }}
            {% elseif type == 'fan' %}
                {{ include ('ApiSocialBundle:User:_cover_channels.html.twig' , {'text' : 'user.fan_of_channels', 'hide_subtitle' : true , 'icon' :'fa-star', 'list': 'fan', 'has_channels': false, 'photo_with_link' : true} ) }}
            {% endif %}
            {% include 'ApiSocialBundle:User:channel_list.html.twig' with {'channels': channels, 'class_margin':'margin-bottom:15%;', 'limit': channels | length} %}
        </div>
    </div>
{% endblock %}

{% block body_js_end %}
{{ parent() }}
{# js to jquerylazyload#}
	{% javascripts
	            '@ApiSocialBundle/Resources/public/js/jquery/jquery.lazyload.min.js'
            %}
		<script src="{{ asset(asset_url) }}"></script>	
   	{% endjavascripts %}
{% include "ApiSocialBundle:Common:lazyload.html.twig" %}
{% endblock %}