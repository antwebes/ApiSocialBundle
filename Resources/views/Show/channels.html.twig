{% extends "ChateaClientBundle::mainLayout.html.twig" %}

{% block head_meta_description %}{% include 'ApiSocialBundle:Show:meta/description.html.twig' with {'user': user} %}{% endblock %}
{% block head_meta_keywords %}{% include 'ApiSocialBundle:Show:meta/keywords.html.twig' with {'user': user} %}{% endblock %}
{% block head_title %}{% include 'ApiSocialBundle:Show:meta/title.html.twig' with {'user': user} %}{% endblock %}

{% block chatea_body %}
    <div class="container">
        <div class="row">
            {% if type == 'owner' %}
                {{ include ('ApiSocialBundle:User:_cover_channels.html.twig' , {'text' : 'Owner of channels', 'icon' :'fa-trophy', 'list': 'owner', 'has_channels': false, 'photo_with_link' : true} ) }}
            {% elseif type == 'moderator' %}
                {{ include ('ApiSocialBundle:User:_cover_channels.html.twig' , {'text' : 'Moderator of channels' , 'icon' :'fa-gavel', 'list': 'moderator', 'has_channels': false, 'photo_with_link' : true} ) }}
            {% elseif type == 'fan' %}
                {{ include ('ApiSocialBundle:User:_cover_channels.html.twig' , {'text' : 'Fan of channels' , 'icon' :'fa-star', 'list': 'fan', 'has_channels': false, 'photo_with_link' : true} ) }}
            {% endif %}
            {% include 'ApiSocialBundle:User:channel_list.html.twig' with {'channels': channels, 'class_margin':'margin-bottom:15%;', 'limit': channels | length} %}
        </div>
    </div>
{% endblock %}