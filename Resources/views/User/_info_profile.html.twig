<div class="profile-user-info" data-behat="profile">
	<div class="profile-info-row" data-behat="profile-row">
		<div class="profile-info-name" data-behat="profile-row-name"> {{ "Username" | trans }} </div>

		<div class="profile-info-value" data-behat="profile-row-value">
			<span>{{ user.username }}</span>
		</div>
	</div>
	{% if user.city %}
	<div class="profile-info-row" data-behat="profile-row">

		<div class="profile-info-name" data-behat="profile-row-name"> {{ "Location" | trans }} </div>
		<div class="profile-info-value" data-behat="profile-row-value">
            <i class="fa fa-map-marker light-orange bigger-110"></i> &nbsp;
            {% if user.city != "no_city" %}
				<span> {{ user.city.name }} {% if user.city.country != 'not-country' %} , {{ user.city.country }} {% endif %}</span>
			{% else %}
				<span>{{ user.city.country }}</span>
			{% endif %}
		</div>
	</div>
	{% endif %}
	{% if user.profile %}
	<div class="profile-info-row" data-behat="profile-row">
		<div class="profile-info-name" data-behat="profile-row-name"> {{ "Age" | trans }} </div>

		<div class="profile-info-value" data-behat="profile-row-value">
			<span>{{"now" |date("Y") - user.profile.birthday | date("Y")}}</span>
		</div>
	</div>
	{% if user.profile.gender %}
	<div class="profile-info-row" data-behat="profile-row">
		<div class="profile-info-name" data-behat="profile-row-name"> {{ "Gender" | trans }} </div>

		<div class="profile-info-value" data-behat="profile-row-value">
			<span>{{ user.profile.gender }}</span>
		</div>
	</div>
	{% endif %}
	{% if user.profile.about %}
	<div class="profile-info-row" data-behat="profile-row">
		<div class="profile-info-name" data-behat="profile-row-name"> {{ "About me" | trans }} </div>

		<div class="profile-info-value" data-behat="profile-row-value">
			<span>{{ user.profile.about }}</span>
		</div>
	</div>
	{% endif %}
	{% if user.profile.youWant %}
	<div class="profile-info-row" data-behat="profile-row">
		<div class="profile-info-name" data-behat="profile-row-name"> {{ "You want" | trans }} </div>

		<div class="profile-info-value" data-behat="profile-row-value">
			<span>{{ user.profile.youWant }}</span>
		</div>
	</div>
	{% endif %}
	{% if user.lastLogin %}
	<div class="profile-info-row" data-behat="profile-row">
		<div class="profile-info-name" data-behat="profile-row-name"> {{ "Last Online" | trans }} </div>
	
		<div class="profile-info-value" data-behat="profile-row-value">
			<span>{{ user.lastLogin | date }}</span>
		</div>
	</div>
	{% endif %}
	{% if user.profile.seeking %}
	<div class="profile-info-row" data-behat="profile-row">
		<div class="profile-info-name" data-behat="profile-row-name"> {{ "I am seeking" | trans }} </div>

		<div class="profile-info-value" data-behat="profile-row-value">
			<span>{{ user.profile.seeking }}</span>
		</div>
	</div>
	{% endif %}
{% endif %}
</div>