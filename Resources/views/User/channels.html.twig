{% extends '::layout.html.twig' %}

{% block head_meta_description %}{% include 'UserBundle:Show:meta/description.html.twig' with {'user': user} %}{% endblock %}
{% block head_meta_keywords %}{% include 'UserBundle:Show:meta/keywords.html.twig' with {'user': user} %}{% endblock %}
{% block head_title %}{% include 'UserBundle:Show:meta/title.html.twig' with {'user': user} %}{% endblock %}

{% block body_container_center %}
	<div class="container">
		<div class="row">
        	{% if type == 'owner' %}
            	{{ include ('UserBundle:Show:_cover_channels.html.twig' , {'text' : 'Owner of channels', 'icon' :'fa-trophy', 'list': 'owner', 'has_channels': false, 'photo_with_link' : true} ) }}
			{% elseif type == 'moderator' %}
				{{ include ('UserBundle:Show:_cover_channels.html.twig' , {'text' : 'Moderator of channels' , 'icon' :'fa-gavel', 'list': 'moderator', 'has_channels': false, 'photo_with_link' : true} ) }}
			{% elseif type == 'fan' %}
				{{ include ('UserBundle:Show:_cover_channels.html.twig' , {'text' : 'Fan of channels' , 'icon' :'fa-star', 'list': 'fan', 'has_channels': false, 'photo_with_link' : true} ) }}
			{% endif %}
			{% include 'UserBundle:Show:channel_list.html.twig' with {'channels': channels, 'class_margin':'margin-bottom:15%;', 'limit': channels | length} %}
    	</div>
	</div>
{% endblock %}